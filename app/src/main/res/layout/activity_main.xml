<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/menma">


    <TextView
        android:id="@+id/textView"
        android:layout_width="316dp"
        android:layout_height="250dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-91dp"
        android:gravity="center"
        android:text="Menjumlahkan 2 Buah Bilangan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#33ccff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="419dp"
        android:text="Masukan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textColor="#ff66cc"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtBil1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="419dp"
        android:text="Masukan Bilangan Kedua"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="casual"
        android:textColor="#ff66cc"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/txtBil2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp">

    </EditText>

    <Button
        android:id="@+id/btnCekBil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBil2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="110dp"
        android:text="Hitung Bilangan"
        android:background="@drawable/costum_button"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="Hasil Penjumlahan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        android:textColor="#ff66cc"
        android:fontFamily="cursive"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/hasil"
        android:layout_width="100dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

    </EditText>


</RelativeLayout>